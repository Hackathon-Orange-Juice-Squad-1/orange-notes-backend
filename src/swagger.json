                            "type": "string"
                        }
                    },
                    "link": {
                        "type": "string"
                    },
                    "desc": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
        }
    }
}