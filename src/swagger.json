{
    "openapi": "3.0.0",
    "info": {
        "title": "API de portfólios online.",
        "description": "Nesta API você pode adicionar projetos autorais em seu perfil e também acessar projetos de outros contribuidores.",
        "contact": {
            "email": "squadorange1@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "API de produção"
        }
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Essa rota será responsável por cadastrar o usuário.",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userRegister"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "first_name": "Olivia",
                                        "last_name": "Dias",
                                        "email": "oliviadias@gmail.com",
                                        "password": "oli2506*/",
                                        "confirmpassword": "oli2506*/"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Erro de validação."
                    },
                    "400": {
                        "description": "Usuário já existente."
                    },
                    "200": {
                        "description": "Usuário criado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/userRegister"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login de usuário.",
                "description": "Essa rota será responsável por logar um usuário.",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "&ref": "#/components/schemas/userLogin"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "oliviadias@gmail.com",
                                        "password": "oli2506*/"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "O email e a senha são obrigatórios!"
                    },
                    "404": {
                        "description": "Usuário ou senha inválidas!"
                    },
                    "200": {
                        "description": "Usuário logado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/userLogin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/googleLogin": {
            "post": {
                "summary": "Login de usuário via Google.",
                "description": "Essa rota será responsável por logar o usuário via Google.",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userGoogle"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "oliviadias@gmail.com",
                                        "displayname": "Olivia Dias",
                                        "uid": "e61da4f0a11da622e6598d",
                                        "photoURL": "http://th.bing.com/th/id/R.b669e33c5b2467d1aea666a6f5392e95?rik=rqTYksA4Umiz2Q&pid=ImgRaw&r=0"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso!"
                    },
                    "200": {
                        "description": "Autenticação realizada com sucesso."
                    },
                    "422": {
                        "description": "Usuário ou senha inválidas!"
                    },
                    "500": {
                        "description": "Aconteceu um erro no servidor, por favor, tente novamente mais tarde!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/userGoogle"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/delete/:id": {
            "delete": {
                "summary": "Exclui um usuário.",
                "description": "Essa rota será responsável por excluir um usuário, através do id.",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User ID",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário excluído com sucesso."
                    },
                    "422": {
                        "description": "Usuário não encontrado!"
                    },
                    "500": {
                        "description": "Aconteceu um erro no servidor, por favor, tente novamente mais tarde!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/excluirPerfil"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/projetos/all": {
            "get": {
                "summary": "Mostra todos os projeto de todos os usuários.",
                "description": "Essa rota será responsável por mostrar os todos projetos de todos os usuários.",
                "tags": [
                    "Projeto"
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/mostrarTodosProjetos"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Todos os campos são obrigatórios!"
                    },
                    "200": {
                        "description": "Projetos"
                    },
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/mostrarTodosProjetos"
                            }
                        }
                    }
                }
            }
        },
        "/projetos/:id": {
            "post": {
                "summary": "Cadastro de projeto",
                "description": "Essa rota será responsável por criar um projeto, utilizando o id do usuário.",
                "tags": [
                    "Projeto"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/projetoRegister"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "title": "Meu projeto",
                                        "tags": "html, css, js",
                                        "link": "linkprojeto",
                                        "desc": "Meu primeiro projeto",
                                        "image": "imagem.png"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Todos os campos são obrigatórios!"
                    },
                    "200": {
                        "description": "Projeto cadastrado com sucesso."
                    },
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/projetoRegister"
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Mostra todos os projeto do usuário.",
                "description": "Essa rota será responsável por mostrar os projetos do usuário.",
                "tags": [
                    "Projeto"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "params",
                        "description": "Usuário ID",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/mostrarProjeto"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Todos os campos são obrigatórios!"
                    },
                    "200": {
                        "description": "Projetos do usuário"
                    },
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/mostrarProjeto"
                            }
                        }
                    }
                }
            }
        },
        "/projetos/:idUser/:idProjeto": {
            "put": {
                "description": "Alterar projeto pelo id do projeto",
                "summary": "Altera o produto pelo id do projeto",
                "tags": [
                    "Projeto"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "params",
                        "description": "Usuário ID",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/projetoRegister"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "title": "Meu projeto",
                                        "tags": "html, css, js",
                                        "link": "linkprojeto",
                                        "desc": "Meu primeiro projeto",
                                        "image": "imagem.png"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Usuário não encontrado"
                    },
                    "404": {
                        "description": "Projeto não encontrado"
                    },
                    "200": {
                        "description": "Projeto atualizado com sucesso.",
                        "content": {
                            "multipart/form-data": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/deletarProjeto"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deleta projeto através do id do projeto.",
                "description": "Essa rota será responsável por deletar um projeto, através do id do projeto.",
                "tags": [
                    "Projeto"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "params",
                        "description": "Projeto ID",
                        "required": true
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Usuário não encontrado!"
                    },
                    "201": {
                        "description": "Projeto excluido com sucesso."
                    },
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/deletarProjeto"
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "userRegister": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
