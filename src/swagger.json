                    },
                    "image": {
                        "type": "string"
                    }
                }
            },
            "mostrarProjeto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                }
            },
            "mostrarTodosProjetos": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": {}
                    },
                    "projetos": {
